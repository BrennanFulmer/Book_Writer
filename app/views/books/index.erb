
<h1> All Books </h1>

<% if flash.has?(:message) %>
  <div id="book list error">
    <h2> <%= flash[:message] %> </h2>
  </div>
<% end %>

<% if !@books.empty? %>
  <ul>
    <% @books.each do |book| %>
        <li> <a href="/books/<%= book.slug %>"> <%= book.title %> </a> </li>
    <% end %>
  </ul>
<% else %>
  <p> No Books Found </p>
<% end %>
