
<h1> <%= @book.title %> </h1>

<% if flash.has?(:message) %>
  <div id="show book error">
    <h2> <%= flash[:message] %> </h2>
  </div>
<% end %>

<% if !@book.chapters.empty? %>
  <ul>
    <% @book.chapters.order(:ordinal).each do |chapter| %>
      <li> <a href="/<%= @book.slug %>/<%= chapter.ordinal %>"> <%= chapter.ordinal %>. <%= chapter.name %> </a> </li>
    <% end %>
  </ul>
<% else %>
  <p> No Chapters Found </p>
<% end %>

<% if @your_book %>
  <br>
  <a href="/books/<%= @book.slug %>/edit"> Edit This Books Title </a>
  <br>
  <br>
  <a href="/<%= @book.slug %>/new_chapter"> Create A New Chapter </a>
  <br>
  <br>
  <a href="/books/<%= @book.slug %>/chapters/reorder"> Reorder A Books Chapters </a>
  <br>
  <br>
  <form action="/books/<%= @book.id %>/delete" method="post">
    <input type="hidden" name="_method" value="delete">

    <input type="submit" value="delete book">
  </form>
<% end %>

<% if @user %>
  <br>
  <a href="/users/<%= @user.slug %>/books"> Your Books </a>
  <br>
  <br>
  <a href="/logout"> Logout </a>
<% else %>
  <br>
  <a href="/books"> List All Books </a>
  <br>
  <br>
  <a href="/"> Login </a>
<% end %>
